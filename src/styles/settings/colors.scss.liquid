
/*------------------------------------*\
    #Colors
\*------------------------------------*/

//Blowfish Light Blue
$primary-color: #38b3e4; 
$primary-color--dark: darken($primary-color, 15%); 
$primary-color--translucent: rgba(0, 0, 0, .8); 

//Blowfish Dark Blue
$secondary-color: #095280; 
$secondary-color--dark: darken($secondary-color, 20%); 
$secondary-color--translucent: rgba(56, 54, 66, .8);

//Blowfish Accent Yellow 
$tertiary-color: #f6d83d; 
$tertiary-color--dark: darken($tertiary-color, 20%); 
$tertiary-color--translucent: rgba(56, 54, 66, .8);


//Blowfish Accent Yellow
$accent-color: #f6d83d; 

$grey--light: #1B1818;
$grey--med: #808083;
$grey--dark: #7B7878;

$color-primary: {{ settings.color_primary }};

// Text colors
//$color-body-text: {{ settings.color_body_text }};
$color-body-text: $primary-color;


// Backgrounds
$body-color: $secondary-color;
$modal-bg-color: rgba(255, 255, 255, .92);

$color-body: $body-color;

// Border colors
$color-border: #f6f6f6;

// Helper colors for form error states
$color-disabled: #000;
$color-disabled-border: #000;
$color-error: #000;
$color-error-bg: #000;
$color-success: #000;
$color-success-bg: #000;