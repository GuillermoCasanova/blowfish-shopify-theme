


<section class="featured-products-section"
           data-section-id="{{ section.id }}" data-section-type="featuredProducts"  data-template="{{ template.name }}" >
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="featured-products-section__inner">

          <div class="featured-product-section__header">
            <h2 class="featured-products-section__headline  headline">
              {{section.settings.headline}}
            </h2>
          </div>

          <ul class="featured-products-section__products" data-featured-products-container>
            {% for block in section.blocks%}
              {% case block.type%}
                {% when 'product'%}
                <li data-featured-product>
                  {% assign product_information = all_products[block.settings.product] %}
                  <div class="eatured-products-section__products__product">

                    <picture>
                      <source srcset="{{ product_information.images[0].src | img_url: '700x' }}" media="(min-width: 64.0625em)">
                      <source srcset="{{ product_information.images[0].src | img_url: '500x' }}" media="(min-width: 43.8125em)">
                      <img src="{{ product_information.images[0].src | img_url: '450x' }}" alt="{{ product.images[0].alt | escape }}">
                    </picture>

                    <h3>
                      {{product_information.title}}
                    </h3>
                    <p>
                      {{product.price  | money}}
                    </p>


                    {% form 'product', product_information, data-product-form: '', data-product-handle: product_information.handle, data-enable-history-state: 'true' %}

                      <select name="id"  data-product-variants hidden>
                        {%for variant in product_information.variants%}
                          <option  value="{{variant.id}}" selected>{{variant.id}}</option>
                        {%endfor%}
                    </select>

                      <button class="button  button--medium  button--primary  button--expanded  product__actions__button" type="submit"
                              name="add"
                              data-add-to-cart
                              type="submit"
                              aria-label="Add selected product to cart"
                              data-text="Add to Cart"
                              id="AddToCart--{{section.id}}">
                          <span data-button-text class="button-textState1">
                            Add to Cart 
                          </span>
                          <span data-button-text class="button-textState2">
                            Add to Cart 
                          </span>
                      </button>
                   {%endform%}

                    <div class="product__rating  yotpo bottomLine">
                      {%- assign yotpo_offload_content = shop.metafields.yotpo.yotpo_offload_content %}
                      {%- assign time_now = 'now' | date: '%s' %}
                      {%- assign yotpo_live_time = shop.metafields.yotpo.yotpo_live | date: '%s' %}
                      {%- assign diff_seconds_from_live = time_now | minus: yotpo_live_time %}
                      {%- assign yotpo_bottomline_last_updated = product.metafields.yotpo.bottomline_update_time | date: '%s' %}
                      {%- assign diff_seconds_from_last_bottomline_update = time_now | minus: yotpo_bottomline_last_updated %}
                      {%- if yotpo_live_time and diff_seconds_from_live < 86400 and yotpo_bottomline_last_updated and diff_seconds_from_last_bottomline_update < 86400 -%}
                       {%- assign yotpo_bottomline_obsolete = false %}
                      {%- else %}
                       {%- assign yotpo_bottomline_obsolete = true %}
                      {%- endif %}
                      {%- if yotpo_offload_content == 'yes' and yotpo_bottomline_obsolete != true -%}
                       {{ product.metafields.yotpo.bottomline }}
                      {%- endif %}
                  </div>
                  
                  </div>
                </li>
              {%endcase%}
            {%endfor%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Featured Products",
    "max_blocks": 4,
    "settings": [
      {
        "type": "header",
        "content": "Featured Products"
      },
      {
        "type": "text",
        "id": "headline",
        "label": "Heading",
        "default": "How much blowfish today?"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products",
        "category": "Product",
        "settings": {
          "headline": "How much blowfish today?"
        }
      }
    ]
  }
{% endschema %}
