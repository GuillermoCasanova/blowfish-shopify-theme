
 <!-- Tell Me About the Science -->
 <section class="section  the-science-section">
    <div class="container-fluid">
     <div class="row  middle-md">

         <div class="col-sm-12  col-md-4  col-md-offset-1">

          <div class="the-science-section__photo">
            <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{'arm_over_face.gif' | asset_url}}" alt="Person laying down with arm over face before taking Blowfish" class="lazyload" data-sizes="auto">
          </div>

         </div>


         <div class="col-sm-12  col-md-6 col-lg-5 col-lg-offset-1">

            <div class="row">
              <div class="col-sm-12">
                <h1 class="headline the-science-section__headline">
                  {{section.settings.headline}}
                </h1>
                
                <p class="the-science-section__body">
                 {{section.settings.body}}
                </p>
                
                <div class="row  center-sm  start-md">
                
                  <div class="col-sm-10  col-md-8  col-lg-6">
                
                    <a href="{{section.settings.cta-link}}" rel="internal" class="button  button--medium  button--primary  button--expanded ">
                      <span class="button-textState1">{{section.settings.cta-label}}</span>
                      <span class="button-textState2">{{section.settings.cta-label}}</span>
                    </a>
                
                  </div>
                
                </div>
              </div>
            </div>
          </div>

         </div>


     </div>

 </section>
 <!--End Tell me about the science section-->


{%schema%}
{
  "name": "The Science Section",
  "settings": [
    {
      "type": "html",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "html",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "url",
      "id": "cta-link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta-label",
      "label": "CTA Label"
    }
  ],
  "presets": [
    {
      "category": "Sections", 
      "name": "The Science Section", 
      "settings": {
        "headline": "Why Hangovers Suck",
        "body": "They're terrible, but why? A quick look at why having a good time makes you feel so bad.",
        "cta-label": "Learn More"
      }
    }
  ]
}
{%endschema%}

